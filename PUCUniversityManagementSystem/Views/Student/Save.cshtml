@using UniversityManagementSystem.Models
@model UniversityManagementSystem.Models.Student

@{
    ViewBag.Title = "Add Student";
    Layout = "~/Views/Shared/_Layout.cshtml";

    AlartType alartType = ViewBag.alart;
}
<link href="~/Content/jquery-ui.css" rel="stylesheet"/>

<div class="col-sm-4"></div>
<div class="col-sm-4" style="padding-top: 30px">


    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading" style="text-align: center"><h4><strong>Register Student</strong></h4></div>
        <div class="panel-body">
            <form id="saveStudentForm" method="POST">

                @if (ViewBag.alart != null)
                {
                    <div class="alert alert-@alartType.Type">
                        <strong>
                            @foreach (var ch in @alartType.Message)
                            {

                                if (ch == ';')
                                {
                                    <br />
                                }
                                else
                                {
                                    @ch
                                }
                            }
                        </strong>
                    </div>
                    @*<p style="font-size: 30px; color: olivedrab">@ViewBag.Mgs</p>*@

                }


                @*@if (ViewBag.alart != null)
            {
                <div class="alert alert-@alartType.Type">@alartType.Message</div>
                <p style="font-size: 30px; color: olivedrab">@ViewBag.Mgs</p>

            }*@




                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="Contact">Contact</label>
                    <input type="text" class="form-control" id="Contact" name="Contact" placeholder="Enter Contact No">
                </div>
                <div class="form-group">
                    <label for="RegDate">Date</label>
                    <input type="text" class="form-control" id="RegDate" name="RegDate" value="@DateTime.Now.ToShortDateString()">
                </div>
                <div class="form-group">
                    <label for="Address">Address</label>
                    <input type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address">
                </div>
                <div class="form-group">
                    <label for="DepartmentId">Department</label>
                    <select id="DepartmentId" name="DepartmentId" class="form-control">
                        <option value="">Select.......</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-success btn-block">Register</button>

            </form>
            
        </div>
        </div>
        </div>
        <div class="col-sm-4"></div>
        
