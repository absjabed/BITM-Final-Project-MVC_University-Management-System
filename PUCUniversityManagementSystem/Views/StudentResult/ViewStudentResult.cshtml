                        <tr>
                            <td><b>Email:</b></td>
                            <td><label id="printEmail"></label></td>
                        </tr>

                        <tr>
                            <td><b>Contact No:</b></td>
                            <td><label id="printContact"></label></td>
                        </tr>
                        <tr>
                            <td><b>Department:</b></td>
                            <td><label id="printDepartment"></label></td>
                        </tr>
                    </table>
                    <br />
