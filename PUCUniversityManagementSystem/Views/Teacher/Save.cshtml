@using UniversityManagementSystem.Models

@{
    ViewBag.Title = "Add Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
    AlartType alartType = ViewBag.alart;
}
<div class="col-sm-4"></div>
<div class="col-sm-4" style="padding-top: 30px">
  
    @*<h2>Save Teacher</h2>
    <hr />*@

    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading" style="text-align: center"><h4><strong>Save Teacher</strong></h4></div>
        <div class="panel-body">


            @*@if (ViewBag.Message != null)
            {
                <p style="font-size: 20px; color: olivedrab">@ViewBag.Message</p>

            }*@
            <form id="saveTeacherForm" method="POST">


                @if (ViewBag.alart != null)
                {
                    <div class="alert alert-@alartType.Type">@alartType.Message</div>
                    @*<p style="font-size: 30px; color: olivedrab">@ViewBag.Mgs</p>*@

                }


                <div class="form-group" >
                    <label for="Name">Name</label>
                    <input type="text"  class="form-control" id="Name" name="Name" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="Address">Address</label>
                    <textarea type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address"></textarea>

                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input class="form-control" id="Email" name="Email" placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <label for="Contact">Contact</label>
                    <input class="form-control" id="Contact" name="Contact" placeholder="Enter Contact">
                </div>
                <div class="form-group">
                    <label for="DesignationId">Designation</label>
                    <select class="form-control" id="DesignationId" name="DesignationId">
                        <option value="">Select Designation....</option>
                        @foreach (var designation in ViewBag.Designations)
                        {
                            <option value="@designation.Id">@designation.Title</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="DepartmentId">Department</label>
                    <select class="form-control" id="DepartmentId" name="DepartmentId">
                        <option value="">Select Department....</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>

                </div>
                <div class="form-group">
                    <label for="CreditTobeTaken">Credit To be Taken</label>
                    <input class="form-control" id="CreditTobeTaken" name="CreditTobeTaken" placeholder="Enter CreditTobeTaken">
                </div>
                <button type="submit" class="btn btn-success btn-block">Save</button>

            </form>


            <div>
                @Html.ActionLink("Back", "Index")
            </div>


        </div>
        </div>


            
        </div>
        <div class="col-sm-4"></div>
        @section scripts{
            <script src="~/Scripts/jquery-2.2.0.js"></script>
            <script src="~/Scripts/jquery.validate.js"></script>

            <script>
                $(document).ready(function () {
                    $("#saveTeacherForm").validate({
                        rules: {
                            Name: "required",
                            Email: {
                                required: true,
                                email: true
                            },
                            Contact: "required",
                            CreditTobeTaken:
                            {
                                required: true,
                                number: true,
                                range: [0, 500]
                            },
                            Address: "required",
                            DesignationId: "required",
                            DepartmentId: "required"

                        },
                        messages: {
                            Name: "Please enter the  Name",
                            Email: {
                                required: "Please email address is required",
                                email: "Please enter a correct email address"
                            },
                            Contact: "Please enter the  contact",
                            CreditTobeTaken: {
                                required: "Credit is required!",
                                number: "Please enter numeric figure only!",
                                range: "Enter a positive number"
                            },
                            Address: "Address is required!",
                            DesignationId: "Designation is required!",
                            DepartmentId: "Please select department"
                        }
                    });
                });
            </script>
        }
