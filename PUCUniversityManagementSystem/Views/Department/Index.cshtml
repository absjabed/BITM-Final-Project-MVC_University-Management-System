
@using GridMvc.Html


@model IEnumerable<UniversityManagementSystem.Models.Department>

@{
    ViewBag.Title = "View Department Information";
}
<div>
    <div id="row1">
        <div class="col-sm-2"></div>
        <div class="col-sm-6">
            <hr/>
            <h2 class="bg-success">View All Department</h2>
            <hr/>
            <h4 class="bg-info">
                @*@Html.ActionLink("Add Department", "Save")*@
            </h4>
        </div>
        <div class="col-sm-4"></div>
    </div>

    <div id="row2">
        <div class="col-sm-4"></div>
        <div class="col-sm-6" style="align-content: center">
            
                @Html.Grid(Model).Columns(columns =>
            {
                columns.Add(st => st.Code)
                    .Titled("Code");
                columns.Add(st => st.Name)
                    .Titled("Name");


            }).WithPaging(4).Sortable();

        </div>
        <div class="col-sm-2"></div>
    </div>
</div>
